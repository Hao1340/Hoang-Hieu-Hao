@page
@model SMS.Hoang_Hieu_Hao.Pages.Manager.EditManagerModel
@{
}
<h3>@ViewData["Title"]</h3>
<hr />
<div class="row shadow">
    <div class="col-md-4">
        <form method="post">
            <input type="hidden" asp-for="Managers.Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Pizzas.Name" class="control-label"></label>
                <input asp-for="Pizzas.Name" class="form-control" />
                <span asp-validation-for="Pizzas.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pizzas.Size" class="control-label"></label>
                <select asp-for="Pizzas.Size" class="form-control" id="PizzaSize">
                    <option value="">-- Select Size --</option>
                    <option value="Small">Small</option>
                    <option value="Medium">Medium</option>
                    <option value="Large">Large</option>
                </select>
                <span asp-validation-for="Pizzas.Size" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Pizzas.IsGlutenFree" /> @Html.DisplayNameFor(model => model.Pizzas.IsGlutenFree)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Pizzas.Price" class="control-label"></label>
                <input asp-for="Pizzas.Price" class="form-control" />
                <span asp-validation-for="Pizzas.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
